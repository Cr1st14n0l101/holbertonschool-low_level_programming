# Compile a .c file

.PHONY = all clean oclean fclean

CC = gcc

SRC = $(wildcard *.c)

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.o: %.c
	${CC} -c ${CFLAGS} $< -o $@

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all
